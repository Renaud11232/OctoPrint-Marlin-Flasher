<div class="accordion-group">
    <div class="accordion-heading">
        <a class="accordion-toggle" data-toggle="collapse" data-parent="#marlin_flasher_arduino_accordion" href="#flash">
            {{ _('Flash') }}
        </a>
    </div>
    <div id="flash" class="accordion-body collapse">
        <div class="accordion-inner">
            <form class="form-horizontal" data-bind="submit: flash">
                <div class="control-group">
                    <label class="control-label" for="fqbn">{{ _('Board') }}</label>
                    <div class="controls">
                        <select id="fqbn" name="fqbn" required="required" data-bind="options:boardList,
                                                                                     optionsCaption: 'Please select one',
                                                                                     optionsText: 'name',
                                                                                     optionsValue: 'FQBN',
                                                                                     value: selectedBoard"></select>
                    </div>
                </div>
                <div data-bind="foreach: boardOptions">
                    <div class="control-group">
                        <label class="control-label" data-bind="text: option_label,
                                                                attr: {for: option}"></label>
                        <div class="controls">
                            <select data-bind="attr: {name: option, id: option},
                                               options: $data.values,
                                               optionsText: 'value_label',
                                               optionsValue: 'value'"></select>
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <button id="arduino_flash-button" class="btn btn-warning" type="submit" data-loading-text="{{ _('Flashing...') }}" ><i class="icon-warning-sign"></i> {{ _('Flash') }}</button>
                    </div>
                </div>
                <span data-bind="text: progressStep"></span>
                <div class="progress progress-text-centered">
                    <div class="bar" data-bind="style: {width: flashingProgress() + '%'},
                                                css: {'bar-success': flashingProgress() >= 100}"></div>
                </div>
            </form>
        </div>
    </div>
</div>
