<div class="accordion" id="marlin_flasher_arduino_accordion" data-bind="visible: loginStateViewModel.isAdmin() && settingsViewModel.settings.plugins.marlin_flasher.platform_type() == 'arduino'">
    {% include "includes/group_items/arduino/sketch.jinja2" %}
    {% include "includes/group_items/arduino/cores.jinja2" %}
    {% include "includes/group_items/arduino/libs.jinja2" %}
    {% include "includes/group_items/arduino/flash.jinja2" %}
</div>

<div class="accordion" id="marlin_flasher_platformio_accordion" data-bind="visible: loginStateViewModel.isAdmin() && settingsViewModel.settings.plugins.marlin_flasher.platform_type() == 'platform_io' && settingsViewModel.settings.plugins.marlin_flasher.retrieving_method() !== 'remote_upload'">
    {% include "includes/group_items/platformio/project.jinja2" %}
    {% include "includes/group_items/platformio/flash.jinja2" %}
</div>

<div data-bind="visible: loginStateViewModel.isAdmin() && settingsViewModel.settings.plugins.marlin_flasher.platform_type() == 'platform_io' && settingsViewModel.settings.plugins.marlin_flasher.retrieving_method() === 'remote_upload'">
    {% include "includes/group_items/platformio/remote_upload.jinja2" %}
</div>

<div data-bind="visible: !loginStateViewModel.isAdmin()">
    <h3>{{ _("Sorry") }}</h3>
    <p>{{ _("Only administrators are authorized to view and use this panel. Please login using an administrator account and try again.") }}</p>
</div>
